<h1>Welcome to IronTumblr</h1>

<div class="row posts-list">

  {{#each posts}}
  <div class="col-md-4 col-lg-3">
    <a href="/post/{{_id}}">
      <header>
        <h5>Posted by: {{creatorId.username}}</h5>
      </header>
      <figure>
        <img src="{{picPath}}" alt="{{picName}}">
      </figure>
      <article>
        <h3>{{picName}}</h3>
        <p>{{content}}</p>
      </article>
    </a>
  </div>
  {{/each}}

</div>