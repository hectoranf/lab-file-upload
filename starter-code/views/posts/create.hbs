<div class="container">
    <h2>Create new post</h2>
    <div class="row">
        <div class="col-sm-6 centered-form">
            <form action="/create-post" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Upload the photo</label>
                    <input type="file" name="imageFile">
                    <input type="text" name="picName" class="form-control" placeholder="Title of the picture"
                        required="true">
                </div>

                <div class="form-group">
                    <textarea name="content" cols="68" rows="8" placeholder="Description"
                        class="form-control"></textarea>
                </div>

                <button type="submit">Create post</button>
            </form>
        </div>
    </div>
</div>